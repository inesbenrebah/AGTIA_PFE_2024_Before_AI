<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover__23_"
    tools:context=".Friends.Add_Friends_Fragment">



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:text=" FRIENDS REQUESTS "
        android:textColor="#211C70"
        android:textSize="30dp"
        android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="Friend Request that Got Rejected  :"
            android:textColor="#3A3940"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler2"
            android:layout_width="350dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            tools:listitem="@layout/rejected_friend_request" />


        <ImageView
        android:id="@+id/addBtnHome"
        android:layout_width="396dp"
        android:layout_height="66dp"
        android:layout_gravity="end|top"
        android:layout_marginEnd="17dp"
        android:src="@drawable/baseline_add_circle_24" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:listitem="@layout/activity_requests" />
    </LinearLayout>

</FrameLayout>
